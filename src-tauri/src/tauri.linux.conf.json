{
  "identifier": "clipcontex-linux-config",
  "app": {
    "security": {
      "capabilities": [
        {
          "identifier": "shell-xprop",
          "description": "Run xprop to detect active window",
          "permissions": [
            {
              "identifier": "shell:allow-execute",
              "allow": [
                { "cmd": "xprop", "args": ["-root", "_NET_ACTIVE_WINDOW"] },
                { "cmd": "xprop", "args": ["-id", "*", "WM_NAME", "WM_CLASS"] }
              ]
            }
          ]
        }
      ]
    }
  }
}